<%- model_class = Carro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @carro.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @carro.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cochera) %>:</strong></dt>
  <dd><%= link_to @carro.cochera.name, @carro.cochera %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture) %>:</strong></dt>
  <dd><%= image_tag @carro.picture.url(:medium) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
  <dd>
    <% @carro.tag_list.each do |tag| %>
      <%= link_to tag, tag_path(tag) %>
    <% end %>  
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              carros_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_carro_path(@carro), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              carro_path(@carro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
